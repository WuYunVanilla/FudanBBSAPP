<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/collection_qa_item"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="96dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/collection_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="产品原型工具有哪些？"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/collection_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="推荐小piu，今年新出的一款在线原型"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/collection_follow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:text="33 个关注"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:text=" · "/>
        <TextView
            android:id="@+id/collection_answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:text="2 个回答"/>



    </LinearLayout>

</LinearLayout>